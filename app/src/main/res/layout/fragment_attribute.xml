<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AttributeFragment" android:id="@+id/attributeFrame">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".AttributeFragment">

        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tableLayout3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="@string/movement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/movement" android:textSize="30sp"
                        android:fontFamily="casual" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
                <EditText
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/movementValue"
                        android:layout_gravity="center" android:textSize="30sp"
                        android:textColor="#000000"
                />
            </TableRow>

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="@string/accuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/accuracy" android:textSize="30sp"
                        android:fontFamily="casual" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
                <EditText
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/accuracyValue"
                        android:layout_gravity="center" android:textSize="30sp"
                        android:textColor="#000000"
                />
            </TableRow>

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="@string/strength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/strength" android:textSize="30sp"
                        android:fontFamily="casual" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
                <EditText
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/strengthValue"
                        android:layout_gravity="center" android:textSize="30sp"
                        android:textColor="#000000"
                />
            </TableRow>

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="@string/evasion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/evasion" android:textSize="30sp"
                        android:fontFamily="casual" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
                <EditText
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/evasionValue"
                        android:layout_gravity="center" android:textSize="30sp"
                        android:textColor="#000000"
                />
            </TableRow>

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="@string/luck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/luck" android:textSize="30sp"
                        android:fontFamily="casual" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
                <EditText
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/luckValue"
                        android:layout_gravity="center" android:textSize="30sp"
                        android:textColor="#000000"
                />
            </TableRow>

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="@string/speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/speed" android:textSize="30sp"
                        android:fontFamily="casual" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
                <EditText
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/speedValue"
                        android:layout_gravity="center" android:textSize="30sp"
                        android:textColor="#000000"
                />
            </TableRow>



        </TableLayout>

        <Button
                android:text="@string/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/resetButton2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="72dp" android:layout_marginStart="72dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="64dp"/>
        <Button
                android:text="@string/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/saveButton2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="72dp" android:layout_marginRight="72dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="64dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>