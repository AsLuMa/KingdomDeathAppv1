<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_centerHorizontal="false" android:id="@+id/ConstraintLayout">
    <Button
            android:text="@string/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resetButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="72dp" android:layout_marginStart="72dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"/>
    <Button
            android:text="@string/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/saveButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp" android:layout_marginRight="72dp"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" android:layout_marginTop="16dp"/>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tableLayout"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/minus"
                    android:id="@+id/survivalButtonDown"
                    android:background="#000000"
                    android:padding="1dp"
                    android:layout_gravity="center"/>
            <TextView
                    android:text="@string/survival"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/survivalID"

                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:fontFamily="casual" android:layout_gravity="center" android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pluss"
                    android:id="@+id/survivalButtonUp"
                    android:background="#000000"
                    android:padding="1dp"
                    android:layout_gravity="center"/>
            <TextView
                    android:text="@string/survivalValueID"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/survivalValueID" android:textSize="30sp"
                    android:layout_gravity="center" android:layout_marginLeft="16dp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/minus"
                    android:id="@+id/insanityButtonDown"
                    android:background="#000000"
                    android:padding="1dp"
                    android:layout_gravity="center"
            />
            <TextView
                    android:text="@string/insanity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/insanityID"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"
                    android:fontFamily="casual" android:layout_gravity="center" android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pluss"
                    android:id="@+id/insanityButtonUp"
                    android:background="#000000"
                    android:padding="1dp"
                    android:layout_gravity="center"
            />
            <TextView
                    android:text="@string/insanityValueID"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/insanityValueID" android:textSize="30sp"
                    android:layout_gravity="center" android:layout_marginLeft="16dp"/>
        </TableRow>

    </TableLayout>


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/skull"
            android:id="@+id/startArmor"
            android:background="#000000"
            android:padding="1dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="156dp"/>
    <TableLayout
            android:layout_width="278dp"
            android:layout_height="361dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="72dp"
            app:layout_constraintVertical_bias="0.23000002" android:id="@+id/tableLayout2"
            app:layout_constraintTop_toBottomOf="@+id/saveButton" android:layout_marginTop="16dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">

            <EditText
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/headValue"
                    android:layout_gravity="center" android:textSize="30sp"
                    android:textColor="#000000"
            />
            <TextView
                    android:text="@string/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/head" android:textSize="30sp"
                    android:fontFamily="casual" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkBox2" android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp" android:visibility="invisible"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkBox7" android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">

            <EditText
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/armsValue" android:layout_gravity="center" android:textSize="30sp"
                    android:textColor="#000000"/>

            <TextView
                    android:text="@string/arms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/arms" android:textSize="30sp"
                    android:fontFamily="casual" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkBox3" android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkBox8" android:layout_marginLeft="0dp"
                     android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">

            <EditText
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/bodyValue" android:layout_gravity="center" android:textSize="30sp"
                    android:textColor="#000000"/>

            <TextView
                    android:text="@string/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/body" android:textSize="30sp"
                    android:fontFamily="casual" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkBox5" android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkBox10" android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">

            <EditText
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/waistValue" android:layout_gravity="center" android:textSize="30sp"
                    android:textColor="#000000"/>

            <TextView
                    android:text="@string/waist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/waist" android:textSize="30sp"
                    android:fontFamily="casual" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkBox6" android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkBox11" android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">

            <EditText
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/legsValue" android:layout_gravity="center" android:textSize="30sp"
                    android:textColor="#000000"/>

            <TextView
                    android:text="@string/legs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/legs" android:textSize="30sp"
                    android:fontFamily="casual" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/checkBox4" android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
            <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="match_parent" android:id="@+id/checkBox9" android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
        </TableRow>
    </TableLayout>

    <Button
            android:text="@string/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/saveButtonArmor"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp" android:layout_marginRight="72dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>