<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_centerHorizontal="false" android:id="@+id/ConstraintLayout">
    <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/survivalTabViewPager">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/skull"
                android:id="@+id/startArmor"
                android:background="#000000"
                android:padding="1dp"
        />
        <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tablayout">

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survival" android:id="@+id/survivalTab"/>

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARMOR" android:id="@+id/armorTab"/>

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attributes" android:id="@+id/attributesTab"/>
        </com.google.android.material.tabs.TabLayout>
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tableLayout"
        >
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp">
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/minus"
                        android:id="@+id/survivalButtonDown"
                        android:background="#000000"
                        android:padding="1dp"
                        android:layout_gravity="center"/>
                <TextView
                        android:text="@string/survival"
                        android:textSize="30sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/survivalID"

                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:fontFamily="casual" android:layout_gravity="center" android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pluss"
                        android:id="@+id/survivalButtonUp"
                        android:background="#000000"
                        android:padding="1dp"
                        android:layout_gravity="center"/>
                <TextView
                        android:text="@string/survivalValueID"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/survivalValueID" android:textSize="30sp"
                        android:layout_gravity="center" android:layout_marginLeft="16dp"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:src="@drawable/minus"
                        android:id="@+id/insanityButtonDown"
                        android:background="#000000"
                        android:padding="1dp"
                        android:layout_gravity="center"
                />
                <TextView
                        android:text="@string/insanity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/insanityID"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"
                        android:fontFamily="casual" android:layout_gravity="center" android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pluss"
                        android:id="@+id/insanityButtonUp"
                        android:background="#000000"
                        android:padding="1dp"
                        android:layout_gravity="center"
                />
                <TextView
                        android:text="@string/insanityValueID"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/insanityValueID" android:textSize="30sp"
                        android:layout_gravity="center" android:layout_marginLeft="16dp"/>
            </TableRow>

        </TableLayout>
        <Button
                android:text="@string/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/saveButton"
                android:layout_marginEnd="72dp" android:layout_marginRight="72dp"
                android:layout_marginBottom="64dp"/>
        <Button
                android:text="@string/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/resetButton"
                android:layout_marginLeft="72dp" android:layout_marginStart="72dp"
                android:layout_marginBottom="64dp"/>
    </androidx.viewpager2.widget.ViewPager2>


</androidx.constraintlayout.widget.ConstraintLayout>